# PERMISSIONS
alias systemctl="sudo systemctl"
alias nano="sudo nano"
alias apt="sudo apt"
alias tail="sudo tail"
alias mmomni="sudo mmomni"

# GESTION SERVEUR
alias maj="apt update && apt list --upgradable"
alias Maj="apt upgrade"
alias majConf="/etc/macg/tools/majConf.sh"

# Fichiers
alias la="sudo ls -lAh --color=auto"
alias duf="sudo du -sh *"
alias df="df -h"
alias files="find . -type f | wc -l"

# DB
alias psql="psql -U postgres"

# LOGS
alias syslog="tail -f /var/log/syslog"
alias matterlog="mmomni tail"

# SERVICES
alias status="systemctl status"
alias restart="systemctl restart"
alias reload="systemctl reload"
alias start="systemctl start"
alias stop="systemctl stop"
